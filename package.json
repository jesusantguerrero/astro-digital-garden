{
  "name": "astro-digital-garden",
  "private": true,
  "scripts": {
    "test": "yarn turbo run test",
    "build": "yarn turbo run build"
  },
  "author": "Jesus Guerrero <jesusant.guerrero@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "publish": {
        "dependsOn": [
          "test",
          "build"
        ],
        "outputs": [
          "dist/**"
        ]
      }
    }
  },
  "devDependencies": {
    "turbo": "^1.0.28",
    "vitest": "^0.1.27"
  }
}
